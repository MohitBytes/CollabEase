<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Archetype Created Web Application</display-name>


    <!--welcome file-->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--servlet name declare-->

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.collabease.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.collabease.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.collabease.controller.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TeamServlet</servlet-name>
        <servlet-class>com.collabease.controller.TeamServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProjectServlet</servlet-name>
        <servlet-class>com.collabease.controller.ProjectServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>com.collabease.controller.TaskServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MemberServlet</servlet-name>
        <servlet-class>com.collabease.controller.MemberServlet</servlet-class>
    </servlet>


    <!--servlet mapping-->

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/signin/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/signin/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/signin/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/Manager/TeamServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProjectServlet</servlet-name>
        <url-pattern>/Manager/ProjectServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/Manager/TaskServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/Member/MemberServlet</url-pattern>
    </servlet-mapping>

</web-app>
